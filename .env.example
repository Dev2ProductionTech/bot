# Replit will auto-populate DATABASE_URL
# DATABASE_URL=postgresql://user:pass@hostname:5432/database

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_WEBHOOK_SECRET=generate_random_32_char_string
TELEGRAM_WEBHOOK_URL=https://your-repl-name.your-username.repl.co/webhook/telegram
AGENT_GROUP_CHAT_ID=-1001234567890

# LongCat.chat API
LONGCAT_API_KEY=your_longcat_api_key
LONGCAT_BASE_URL=https://api.longcat.chat/v1
LONGCAT_MODEL=gpt-4o-mini
LONGCAT_MAX_TOKENS=500

# Security
SECRET_KEY=generate_random_32_char_secret_key

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Rate Limiting (in-memory for Replit)
RATE_LIMIT_PER_HOUR=60
RATE_LIMIT_PER_DAY=500

# LLM Quotas
LLM_SESSION_LIMIT=10
LLM_DAILY_LIMIT=50
LLM_DAILY_BUDGET_USD=100.0
